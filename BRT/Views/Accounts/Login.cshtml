@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- SweetAlert CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- SweetAlert JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f7f7f7;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            padding: 70px 20px 70px 20px;
            max-width: 300px;
            width: 100%;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: 600;
            color: #333;
        }

        .form-group {
            margin-bottom: 10px;
        }

        .form-group label {
            font-weight: 600;
            color: #333;
            display: block;
          
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
            color: #333;
        }

        .form-group input:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

        .btn {
            background-color: #007bff;
            color: #fff;
            font-size: 14px;
            padding: 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .forgot-password {
            text-align: center;
            margin-top: 15px;
        }

        .forgot-password a {
            color: #007bff;
            text-decoration: none;
        }

        .forgot-password a:hover {
            text-decoration: underline;
        }

        .error-message {
            color: red;
            text-align: center;
            margin-bottom: 10px;
        }

        body {
            background-image: url('/images/brt6.jpg'); /* Specify the image path */
            background-size: cover; /* Make sure the image covers the entire body */
            background-position: center; /* Center the image */
            background-repeat: no-repeat; /* Prevent the image from repeating */
            background-attachment: fixed; /* Make the background fixed while scrolling */
        }
         .animated-text {
            font-size: 48px;
            font-weight: bold;
            color: #333;
            opacity: 0; /* Start with hidden text */
            animation: fadeInScale 3s ease-in-out infinite; /* Animation on loop */
        }

        /* Keyframes for the animation */
        @@keyframes fadeInScale {
            0% {
                opacity: 0;
                transform: scale(0.5);
            }
            50% {
                opacity: 1;
                transform: scale(1.2);
                color: #007bff; /* Change to blue at midpoint */
            }
            100% {
                opacity: 0;
                transform: scale(0.5);
            }
        }

    </style>
</head>
<body>
    <div class="login-container">
        <h2 class="animated-text">AICT BRT</h2>
        <hr />
        <h2>Login</h2>

        <!-- Display Validation Errors -->
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="error-message">
                @ViewBag.ErrorMessage
            </div>
        }

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="Username">Username</label>
                <input type="text" id="Username" name="username" required placeholder="Enter your username" />
            </div>

            <div class="form-group">
                <label for="Password">Password</label>
                <input type="password" id="Password" name="password" required placeholder="Enter your password" />
            </div>

            <button type="submit" class="btn">Login</button>

        </form>
    </div>
</body>
</html>

@if (ViewBag.Message != null)
{
    <script>
        Swal.fire({
            title: 'Error',
            text: '@ViewBag.Message', // Make sure the message is wrapped in quotes
            icon: 'error',
            confirmButtonText: 'OK'
        });
    </script>
}
